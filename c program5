lower case to upper case loop #53

#include <stdio.h>
int main(void){
char name[30];
int i = 0;
printf("Enter a string:");
fgets(name,302,stdin);
while(name[i]){
if(name[i]>='a'&&name[i]<='z'){
name[i]= name[i]-32;
}
i++;
}printf("output: %d\n",name);
return 0;
}
