half pyramid and full pyramid #54

#include <stdio.h>
int main(void){
int i,j,rows =5;
for(i =0;i<rows;i++){
for(j =0;j<=i;j++){
printf("* ");

}printf("\n");
}
return 0;
}
________________________________________________
#include <stdio.h>
int main(void){
int i,j,rows=5;
for(i =0;i<rows;i++){
for(j =i+1;j<=rows;j++){
printf(" ");
}
for(j=0;j<(2i)-1;j++){
printf(" ");
}
printf("\n");
}
return 0;
}
