simple calculation project in c #8
#include <stdio.h>
int main(){
float num1,num2,result;
scanf("%f %f", &num1, &num2);
result= num1 + num2;
printf("%f + %f = %f\n",num1,num2,result);
result= num1 - num2;
printf("%f - %f = %f\n",num1,num2,result);
result= num1 * num2;
printf("%f * %f = %f\n",num1,num2,result);
result= num1 / num2;
printf("%f / %f = %f\n",num1,num2,result);
return 0;
}
// 10 2.5
___________________________________________________________________
Integer type data in c #9

#include <stdio.h>
int main(){
//signed Integer data
//short %d %hi
short a = 45;
printf("I am short - %hi\n",a);

//Int %d %i
int b = 1000;
printf("I am int - %d\n",b);

//long %ld %li
long c = 1200l;
printf("I am long - %ld\n",c);

//long long %lld %lli
long long d = 34343ll;
printf("I am long long- %lld\n",d);

//octal int %o
int o = 0777;
printf("I am octal - %o\n",o);

//hexadecimal int %x %x
int h = 0Xfff;
printf("I am hexadecimal - %x\n",h);
return 0;
}
___________________________________________________________________
Integer type data in c-2 #10

#include <stdio.h>
int main(){
// unsigned Integers
printf("Unsigned Integers\n");
//unsigned short - %hu
unsigned short us = 41;
printf("unsigned short - %hu\n",us);
//unsigned long - %lu
unsigned long ul = 44545;
printf("unsigned long - %lu\n",ul);
//unsigned long long - %llu
unsigned long long ull = 44545;
printf("unsigned long long - %llu\n",ull);
return 0;
}
___________________________________________________________________
Float Data in c #11

#include <stdio.h>
int main(void){
// Float-%f
float f = 4588.459f;
printf("%f\n",f);

// double-%lf
double d = 45896.25;
printf("%lf\n",d);

// long double-%lf
long double ld = 4589654695.254;
printf("%lf\n",ld);
return 0;
}
