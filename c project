___________________________________________________________________
string data in c #13

#include <stdio.h>
int main(void){
char name [20];
Name [0]='A';
Name [1]='S';
Name [2]=' ';
Name [3]='S';
Name [4]='A';
Name [5]='Y';
Name [6]='E';
Name [7]='M';
printf("%s\n",name);

char name1[20]= {'A','s', ' ','S','a','y','e','m'};
printf("%s\n",name1);

char name2[20] = "As Sayem";
printf("%s\n",name2);

return 0;
}
___________________________________________________________________
Boolean works in c #14

#include <stdio.h>
int main(void){
short is_logged_in =0;
if(is_logged_in){
printf("User Logged In\n");
}else {
printf("User Logged out\n");
}
return 0;
}


//User logged Out
#include <stdio.h>
int main(void)
{
short is_logged_in =1;
if(is_logged_in){
printf("User Logged In\n");
}else {
printf("User Logged out\n");
}
return 0;
}
//User Logged In
___________________________________________________________________
boolean works in c-2 #15

#include <stdio.h>
#include<stdbool.h>
int main(void)
{
short is_logged_in =true;
if(is_logged_in){
printf("User Logged In\n");
}else {
printf("User Logged out\n");
}
return 0;
}


#include <stdio.h>
#include<stdbool.h>
int main(void)
{
short is_logged_in =false;
if(is_logged_in){
printf("User Logged In\n");
}else {
printf("User Logged out\n");
}
return 0;
}









