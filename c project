//Variable definition vs declaration #1

#include <stdio.h>
int main(){
int var = 55;
printf("var + 5 = %d\n",var + 5);
printf("var - 5 = %d\n",var - 5);
printf("var * 5 = %d\n",var * 5);
printf("var / 5 = %d\n",var / 5);
printf("var = %d\n",var);
return 0;
}
----------------------------------------------------------
//simple calculation in c #2

#include <stdio.h>
int main()
{
int a = 10;
int b = 20;
printf("%d + %d = %d\n",a,b,a+b);
printf("%d - %d = %d\n",a,b,a-b);
printf("%d * %d = %d\n",a,b,a*b);
printf("%d / %d = %d\n",a,b,a/b);
return 0;
}
_______________________________________________________________
//simple calculation in c -2 #3

#include <stdio.h>
int abc = 100;
int main(){
int a = 50;
int b = 30;
int c;
c = 500;
c = 100;
printf("%d\n",c);
printf("%d + %d = %d\n",a,b,a+b);
printf("%d - %d = %d\n",a,b,a-b);
printf("%d * %d = %d\n",a,b,a*b);
printf("%d / %d = %d\n",a,b,a/b);
printf("%d\n",abc);
return 0;
}




