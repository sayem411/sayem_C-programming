//Variable definition vs declaration #1

#include <stdio.h>
int main(){
int var = 55;
printf("var + 5 = %d\n",var + 5);
printf("var - 5 = %d\n",var - 5);
printf("var * 5 = %d\n",var * 5);
printf("var / 5 = %d\n",var / 5);
printf("var = %d\n",var);
return 0;
}
----------------------------------------------------------
//simple calculation in c #2

#include <stdio.h>
int main()
{
int a = 10;
int b = 20;
printf("%d + %d = %d\n",a,b,a+b);
printf("%d - %d = %d\n",a,b,a-b);
printf("%d * %d = %d\n",a,b,a*b);
printf("%d / %d = %d\n",a,b,a/b);
return 0;
}
_______________________________________________________________
//simple calculation in c -2 #3

#include <stdio.h>
int abc = 100;
int main(){
int a = 50;
int b = 30;
int c;
c = 500;
c = 100;
printf("%d\n",c);
printf("%d + %d = %d\n",a,b,a+b);
printf("%d - %d = %d\n",a,b,a-b);
printf("%d * %d = %d\n",a,b,a*b);
printf("%d / %d = %d\n",a,b,a/b);
printf("%d\n",abc);
return 0;
}
___________________________________________________________________
//Basic data in c #4

#include <stdio.h>
int main()
{
int num = 45;
float num2 = 45.45f;
char ch = 'T';
printf("%d\n",num);
printf("%f\n",num2);
printf("%c\n",ch);
return 0;
}
___________________________________________________________________
//Basic data in c-2 #5

#include <stdio.h>
int main(){
int num = 45;
float num2 = 450.45f;
char ch = 'T';
printf("%d\n",num);
printf("%f\n",num2);
printf("%c\n",ch);
num = num2;
printf("%d\n",num);
return 0;
}
___________________________________________________________________
//Basic Data in c-3 #6

#include <stdio.h>
int main(){
const float PI=3.1416f;
printf("%f\n",PI);
return 0;
}
