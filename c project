//Variable definition vs declaration #1

#include <stdio.h>
int main(){
int var = 55;
printf("var + 5 = %d\n",var + 5);
printf("var - 5 = %d\n",var - 5);
printf("var * 5 = %d\n",var * 5);
printf("var / 5 = %d\n",var / 5);
printf("var = %d\n",var);
return 0;
}
----------------------------------------------------------
//simple calculation in c #2

#include <stdio.h>
int main()
{
int a = 10;
int b = 20;
printf("%d + %d = %d\n",a,b,a+b);
printf("%d - %d = %d\n",a,b,a-b);
printf("%d * %d = %d\n",a,b,a*b);
printf("%d / %d = %d\n",a,b,a/b);
return 0;
}





