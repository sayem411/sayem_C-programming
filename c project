//simple calculation in c -2 #3

#include <stdio.h>
int abc = 100;
int main(){
int a = 50;
int b = 30;
int c;
c = 500;
c = 100;
printf("%d\n",c);
printf("%d + %d = %d\n",a,b,a+b);
printf("%d - %d = %d\n",a,b,a-b);
printf("%d * %d = %d\n",a,b,a*b);
printf("%d / %d = %d\n",a,b,a/b);
printf("%d\n",abc);
return 0;
}
