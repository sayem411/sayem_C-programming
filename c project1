Relation operator in c #19

#include <stdio.h>
#include<stdbool.h>
int main()
{
int a = 35;
int b = 30;
bool a_is_greater = a>b;
printf("A is greater than B -%d\n",a_is_greater);

bool a_is_smaller = a<b;
printf("A is smaller than B -%d\n",a_is_smaller);

bool a_is_b = a==b;
printf("A is B -%d\n",a_is_b);

bool a_is_not_b = a!=b;
printf("A is not B -%d\n",a_is_not_b);

return 0;
}
___________________________________________________________________
Logical operator in c #20

#include <stdio.h>
#include<stdbool.h>
int main(void)
{
bool has_nid = false;
bool has_passport = true;
bool is_adult = true;

bool has_identity = has_nid || has_passport;
printf("identity-%d\n",has_identity);

bool is_Permitted = has_nid && is_adult;
printf("Permission - %d\n", is_Permitted);

bool is_permitted =(has_nid ||has_passport)&& is_adult;
printf("permission- %d\n",is_permitted);

return 0;
}
___________________________________________________________________
Assignment operator in c #21

#include <stdio.h>
int main(void)
{
int a = 10;
//a = a+5
a+=5;
printf("%d\n",a);

//a = a-5
a-=5;
printf("%d\n",a);

//a = a5
a=5;
printf("%d\n",a);

//a = a/5
a/=5;
printf("%d\n",a);

//a = a%5
a%=5;
printf("%d\n",a);

return 0;
}
