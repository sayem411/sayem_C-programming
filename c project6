Two and Multidimensional array in c #66

#include <stdio.h>
int main(){
int students[6][3]={
{1,89,85},
{2,69,75},
{3,86,98},
{4,99,85},
{5,68,95},
{6,86,88}};

int i,j;
printf("Roll no\tBangla\tEnglish\n");
for(i=0;i<6;i++){
  for(j=0;j<3;j++){
    printf("%d\t",students[i][j]);
  }
  printf("\n");
}
int total_score_bn = 0,total_score_en = 0;
for(i=0;i<6;i++){
total_score_bn+=students[i][1];
total_score_en+=students[i][2];

}
printf("\n Bangla:Total = %d and AVG = %0.2f",total_score_bn,(float)(total_score_bn/6));
printf("\n English:Total = %d and AVG = %0.2f",total_score_en,(float)(total_score_en/6));

return 0;
}
